mixin postHead(post)
  .post-head.group
    a(href="#{data.baseUrl}#{post.url}")
      h1.post-title= post.title
    h2.post-date Published&nbsp
      abbr.timeago(title="#{post.date.toISOString()}")

mixin post(post)
  mixin postHead(post)
  .post-body.markdown!= post.content

mixin nav(current)
  ul.nav.group
    li.icon-menu.menu
    li.nav-link.red(class= current === "index" ? "active" : "")
      a.name(href="#{data.baseUrl}") My Name
    li.nav-link.blue(class= current === "about" ? "active" : "")
      a(href="#{data.baseUrl}about.html") about
    li.nav-link.orange(class= current === "projects" ? "active" : "")
      a(href="#{data.baseUrl}projects.html") projects
    li.nav-link.green(class= current === "archives" ? "active" : "")
      a(href="#{data.baseUrl}archives.html") archives

doctype 5
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="icon", type="image/png", href="#{data.baseUrl}images/cabin.png")
    link(href="#{data.baseUrl}styles/main.css", rel="stylesheet")
    block title
      title= "My Blog"
  body
    block nav

    .content
      block content

    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.2/jquery.min.js", type="text/javascript")
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery-timeago/1.1.0/jquery.timeago.min.js", type="text/javascript")
    script(src="#{data.baseUrl}scripts/main.js", type="text/javascript")
    script.
